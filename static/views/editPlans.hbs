<body>
    <a href="AdminDashboard" style="margin-left: 20px;"> AdminDashboard</a>
    <br>
    <br>


    <div class="container" id="form-field">
        
      <div class="content">
          {{#if errorMsg}}
            <div
                class="card text-white bg-danger"
                style="margin-bottom: 10px; width:350px; margin-left: auto; margin-right: auto;">
                <div class="card-header">Errors</div>
                <div class="card-body">
                    {{errorMsg}}
                </div>
            </div>
        {{/if}}
          <form action="/editPlans" method="POST">
        <section>
            <fieldset>
          <legend class="text-center field">Add a new plan</legend>
          <div class="container">
          
            <div class="row text-decoration">
              <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                <label for="planimg"><strong>Logo</strong></label>
                <input
                  type="file"
                  class="form-control"
                  placeholder="Plan img"
                  accept="image/png, image/gif, image/jpeg"
                  name="planimg"
                  id="planimg"
                />
              </div>
    
              <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                <label for="planname"><strong>Plan Name</strong></label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="Plan Name"
                  value="{{planDetails.pname}}"      
                  name="planname"
                  id="planname"          
                />
             </div>

             <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
               <label for="desc"><strong>Description</strong></label>
               <input
                 type="text"
                 class="form-control"
                 placeholder="description"
                 value="{{planDetails.pdesc}}"
                 name="desc"
                 id="desc"
               />
             </div>

             <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
              <label for="price"><strong>Plan Price</strong></label>
              <input
               type="text"
               class="form-control"
               placeholder="1 months Price"
               value="{{planDetails.pprice}}"
               name="price"
               id="price"
              />
             </div>
   
             <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
               <label for="fetures"><strong>Fetures</strong></label>
               <input
                 type="text"
                 class="form-control"
                 placeholder="Fetures"
                 value="{{planDetails.pfetures}}"
                 name="fetures"
                 id="fetures"
               />
             </div>
            </div>              
          </div>
        </fieldset>
        </section>
        
        
        <button type="submit" class="addButt">Add</button>
        
        
      </form>
      </div>
    </div>
  </div>


</body>